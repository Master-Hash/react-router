{
  "include": [ "**/*.ts" ],
  "exclude": [ "dist", "__tests__", "node_modules" ],
  "compilerOptions": {
    "lib": [ "ESNext", "DOM", "DOM.Iterable" ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "jsx": "react-jsx",

    "declaration": true,

    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "react-router": [ "./index.ts" ]
    }
  }
}
